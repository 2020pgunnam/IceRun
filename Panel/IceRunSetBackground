
   import javax.swing.*;
   import java.awt.*;
   import java.awt.event.*;
   import java.text.DecimalFormat;
    public class SetBackgroundPanel extends JPanel
   {
      private JLabel top;
      
       public SetBackgroundPanel()
      {
         setLayout(new BorderLayout());
      
         JPanel header = new JPanel();
         header.setLayout(new FlowLayout());
         top = new JLabel("Pick a Background:");
         
         top.setForeground(Color.BLUE);
         
         header.add(top);
         
         add(header, BorderLayout.NORTH);
         
         JPanel buttons = new JPanel();
         buttons.setLayout(new GridLayout(3,3,10,0));
         add(buttons, BorderLayout.CENTER);
         addButton(buttons, "img1", "img1");
         addButton(buttons, "img2", "img2");
         addButton(buttons, "img3","img3");
         addButton(buttons, "img4", "img4");
         addButton(buttons, "img5", "img5");
         addButton(buttons, "img6", "img6");
         addButton(buttons, "img7", "img7");
         addButton(buttons, "img8", "img8");
         addButton(buttons, "img9", "img9");
      }
       private void addButton(JPanel panel, String s, String imgName)
      {
         JButton button = new JButton(s);
         button.addActionListener(new Listener(imgName));
         panel.add(button);
           
      }
       private class Listener implements ActionListener
      {
         private String imgName;
          public Listener(String name)
         {
            imgName = name;
         }
          public void actionPerformed(ActionEvent e)
         {
           	
         }
      }
   }
