   import java.awt.*;
   //game frame will be 800x800
   public class Power
   {
      private int myX;   // x and y coordinates of center
      private int myY;
      private int myDiameter;
      private int myRadius;
     // constructors
      public Power(int x, int y)
      {
         myX = x;
         myY = y;
         myDiameter = 25;
         myRadius = myDiameter/2;
      }
      public Power(int x, int y, int d)
      {
         myX = x;
         myY = y;
         myDiameter = d;
         myRadius = d/2;
      }
    // accessor methods
      public int getX() 
      { 
         return myX;
      }
      public int getY()      
      { 
         return myY;
      }
      public int getDiameter() 
      { 
         return myDiameter;
      }
      public int getRadius()
      {
      return myDiameter / 2;
      }
   // modifier methods
      public void setX(int x)
      {
         myX = x;
      } 
      public void setY(int y)
      {
         myY = y;
      }
    //	 instance methods
      public void randPos(int rightEdge, int bottomEdge)
      {
         // moves powerup to random location that player can reach
         myX = (int)(Math.random()* (rightEdge-myDiameter) + myRadius);
         myY = (int)(Math.random()* (bottomEdge-myDiameter) + ((bottomEdge/2) - myRadius));
      }
      
         }
